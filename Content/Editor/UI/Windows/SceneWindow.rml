<html>
<head>
    <style>
        body {
            font-family: LatoLatin;
            font-weight: normal;
            font-style: normal;
            font-size: 15dp;
            width: 100%;
            height: 100%;
            background: white;
        }

        #root {
            display: flex;
            flex-direction: column;
            margin: 0 0;
            height: 100%;
        }
        
        #root > .row {
            display: flex;
            flex-direction: row;
            width: 100%;
            height: 10%;
            margin: 0;
        }
        
        #root > .row.top {
            height: 80%;
        }

        #root > .row.bottom {
            height: 20%;
        }

        #heirarchy  {
            background-color: grey;
            height: 100%;
            width: 200dp;
            margin: 0;
        }
        
        #property-inspector  {
            background-color: blue;
            height: 100%;
            width: 200dp;
            margin: 0;
        }

        #game-view {
            background-color: green;
            height: 100%;
            width: 200dp;
            margin: 0;
            flex-grow: 8;
        }

        #utilities {
            background-color: purple;
            height: 100%;
            width: 100%;
            margin: 0;
            flex-grow: 8;
        }
    </style>
</head>
<body>
<div id="root">
    <div class="row top">
        <div id="heirarchy">
            <div class="content" onmouseover="xerg">
                <div>Heirarchy</div>
            </div>
        </div>
        <div id="game-view">
            game view
        </div>
        <div id="property-inspector">
            <div class="content">
                <div>Property inspector</div> 
            </div>
        </div>
    </div>
    <div class="row bottom">
        <div id="utilities">
            <div class="content">
                <div>Project</div>
            </div>
        </div>
    </div>
</div>
</body>
</html>
